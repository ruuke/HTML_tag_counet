.row.justify-content-center.mt-3
  .col.col-md-4
    .card.border-secondary
      .card-body
        = form_with model: @document, local: true do |form|
          = render 'shared/errors', resource: @document
          %p
            = form.label :url
            %br/
            = form.text_area :url, id: :document_url, class: 'form-control'
          %p= form.submit class: 'btn btn-outline-success btn-sm'
